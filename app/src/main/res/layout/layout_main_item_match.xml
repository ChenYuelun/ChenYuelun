<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/e5" />

    <LinearLayout
        android:id="@+id/rl_pinned_top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_Date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="日期"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text666"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pinned_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_selector"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_intentSeason"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_bet_match_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:text="周一 001"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_league"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="欧冠杯"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#BBBBBB"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical|left"
                android:text="今日"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#BBBBBB"
                android:textSize="12sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/tv_match_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical|left"
                android:text="1:00"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#BBBBBB"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/ll_intentSeason"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="2dp">

                    <ImageView
                        android:id="@+id/iv_host_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:id="@+id/tv_host_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="主队"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_footballHost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="[主]"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text999"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/iv_away_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:id="@+id/tv_away_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="客队"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_basketballHost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="[主]"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/text999"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_donghua"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView82"
                    android:layout_width="11dp"
                    android:layout_height="9dp"
                    android:background="@drawable/live_dong_blue" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="动画直播"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/text333"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_collect"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/fav_collect" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tv_noForecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="计算中..."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/text666"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <com.chen.libraryresouse.costomView.ConfidenceView
                    android:id="@+id/confidenceView"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="20dp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/eee" />

        <include layout="@layout/view_match_forecast" />

    </LinearLayout>



</LinearLayout>