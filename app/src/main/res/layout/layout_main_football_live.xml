<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/ll_match_live"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#ff0000" />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="正在直播"
            android:id="@+id/tv_live_title"
            android:textColor="#ff4747"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_live_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/rl_live_setting"
            android:gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/live_setting" />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_no_net"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="120dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/live_src"
            android:layout_height="40dp" />
        <Button
            android:layout_width="100dp"
            android:layout_marginTop="8dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:text="重新加载"
            android:textSize="12dp"
            android:id="@+id/no_net_btn"
            android:textColor="#fff"
            android:background="@drawable/shape_home_bet_left_selected"/>
    </LinearLayout>
    <com.tencent.smtt.sdk.WebView
        android:id="@+id/web_main_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="#f9f9f9"
        android:id="@+id/tv_more_match"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="查看更多"
        android:textColor="#999999"
        android:textSize="13sp" />

</LinearLayout>