<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#252525">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:id="@+id/ll_before"
        android:background="@drawable/btn_back_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="前一天"
            android:id="@+id/tv_lastDay"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/ll_calendar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="日期"
            android:id="@+id/tv_calendar_data"
            android:textColor="@color/data_analyse_group"
            android:textSize="14sp"
            android:layout_marginRight="5dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/data_analyse_group" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageView83"
            android:background="@drawable/calendar_pic"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/ll_next"
        android:background="@drawable/btn_back_selector"
        android:gravity="center_vertical|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="后一天"
            android:id="@+id/tv_nextDay"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginRight="10dp" />

    </LinearLayout>
</LinearLayout>
